import tkinter as tk
from tkinter import messagebox

# Function to update ABS_BOUNDS in the configuration file
def update_config():
    try:
        x_min = float(x_min_entry.get())
        x_max = float(x_max_entry.get())
        y_min = float(y_min_entry.get())
        y_max = float(y_max_entry.get())
        z_min = float(z_min_entry.get())
        z_max = float(z_max_entry.get())
        
        abs_bounds = f"ABS_BOUNDS = (\n    ({x_min}, {x_max}),\n    ({y_min}, {y_max}),\n    ({z_min}, {z_max})\n)"
        
        with open('config.py', 'r') as file:
            lines = file.readlines()
        
        with open('config.py', 'w') as file:
            for line in lines:
                if line.strip().startswith('ABS_BOUNDS'):
                    file.write(abs_bounds + '\n')
                else:
                    file.write(line)
        
        messagebox.showinfo("Success", "ABS_BOUNDS updated successfully!")
    except ValueError:
        messagebox.showerror("Error", "Please enter valid numeric values.")

# Initialize Tkinter window
root = tk.Tk()
root.title("Update ABS_BOUNDS")

# Labels and entry fields for x, y, z bounds
tk.Label(root, text="X Min:").grid(row=0, column=0)
x_min_entry = tk.Entry(root)
x_min_entry.grid(row=0, column=1)

tk.Label(root, text="X Max:").grid(row=0, column=2)
x_max_entry = tk.Entry(root)
x_max_entry.grid(row=0, column=3)

tk.Label(root, text="Y Min:").grid(row=1, column=0)
y_min_entry = tk.Entry(root)
y_min_entry.grid(row=1, column=1)

tk.Label(root, text="Y Max:").grid(row=1, column=2)
y_max_entry = tk.Entry(root)
y_max_entry.grid(row=1, column=3)

tk.Label(root, text="Z Min:").grid(row=2, column=0)
z_min_entry = tk.Entry(root)
z_min_entry.grid(row=2, column=1)

tk.Label(root, text="Z Max:").grid(row=2, column=2)
z_max_entry = tk.Entry(root)
z_max_entry.grid(row=2, column=3)

# Update button
update_button = tk.Button(root, text="Update ABS_BOUNDS", command=update_config)
update_button.grid(row=3, columnspan=4)

root.mainloop()
